@model CmsA.Web.Models.Message.MessageIndexVM
<h3 class="m-3 mb-4">Messages</h3>
<div class="row">
    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 grid-margin stretch-card">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="clearfix">
                    <div class="float-start">
                      <a asp-action="Index" asp-area="admin" asp-controller="Message" asp-route-type="all" ><i class="fas fa-inbox fa-2x"></i> </a> 
                    </div>
                    <div class="float-end">
                        <p class="mb-0 text-right">Ümumi İsmarıclar</p>
                        <div class="fluid-container">
                            <h3 class="font-weight-medium text-right mb-0">@Model.Total</h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 grid-margin stretch-card">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="clearfix">
                    <div class="float-start">
                      <a asp-action="Index" asp-area="admin" asp-controller="Message" asp-route-type="unread" >  <i class="far fa-envelope text-danger fa-2x"></i> </a> 
                    </div>
                    <div class="float-end">
                        <p class="mb-0 text-right">Oxunmamış İsmarıclar</p>
                        <div class="fluid-container">
                            <h3 class="font-weight-medium text-right mb-0">@Model.UnRead</h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 grid-margin stretch-card">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="clearfix">
                    <div class="float-start">
                        <a asp-action="Index" asp-area="admin" asp-controller="Message" asp-route-type="read" >   <i class="fas fa-envelope-open-text text-success fa-2x"></i> </a>
                    </div>
                    <div class="float-end">
                        <p class="mb-0 text-right">Oxunmuş İsmarıclar</p>
                        <div class="fluid-container">
                            <h3 class="font-weight-medium text-right mb-0">@(@Model.Total-Model.UnRead)</h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Title</th>
                                <th>Email</th>
                                <th>Read</th>
                                <th class="float-right">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mesage in Model.Messages)
                            {
                                <tr>
                                     <td>    @mesage.Time  </td>
                                    <td>     @mesage.Name      </td>
                                    <td>       @mesage.Email   </td>
                                    <td>    <i class="@(mesage.IsRead?"far fa-envelope-open text-success":"far fa-envelope text-danger")"></i> </td>

                                    <td class="float-right">
                                        <a class="float-right m-1" href="@Url.Action("ReadMessage", "Message",new { id = mesage.Id})"><i class="fas fa-glasses "></i></a>
                                        <a class="float-right m-1" href="@Url.Action("Delete", "Message",new { id = mesage.Id})"><i class=" fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
