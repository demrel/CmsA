@model CmsA.Web.Models.Partners.PartnerAddVM
<h3 class="m-3 mb-4">Add Partner</h3>
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="row mt-4">

                <dv class="col-md-12">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">

                        <div class="row mt-12">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Add.Name">GlobalName</label>
                                    <input type="text" class="form-control" asp-for="Add.Name" placeholder="GlobalName">
                                </div>
                            </div>
                           

                        </div>

                         <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Add.Name">Url</label>
                                    <input type="text" class="form-control" asp-for="Add.Url" placeholder="Url">
                                </div>
                            </div>

                        <div class="col-sm-4 pb-4">
                            <div class="form-group">
                                <label>File upload</label>
                                <input type="file" asp-for="Image" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-info" type="button">Upload</button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" asp-controller="Partner" asp-action="Add" class="btn btn-success mr-2">Submit</button>




                    </form>
            </div>

        </div>
    </div>
</div>


@section Scripts{
<script src="~/admin/js/shared/file-upload.js"></script>
}
